<Application x:Class="PersonenDB_Bsp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:local="clr-namespace:PersonenDB_Bsp"
             StartupUri="PersonenDB.xaml">
    <Application.Resources>
        <sys:Double x:Key="doubleFontSize">20</sys:Double>
        <LinearGradientBrush x:Key="lgbBackground">
                <GradientStop Color="LightYellow" Offset="0"/>
                <GradientStop Color="Orange" Offset="1"/>
        </LinearGradientBrush>
        <Style x:Key="styWndMain" TargetType="Window">
            <Setter Property="Background" Value="{StaticResource lgbBackground}"/> 
            <Setter Property="ResizeMode" Value="NoResize"/>
            <Setter Property="FontSize" Value="{StaticResource doubleFontSize}"/>
        </Style>
    </Application.Resources>
</Application>
